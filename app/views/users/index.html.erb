<% @title = t '.title' %>
<% content_for :actions do %>
  <ul>
    <li><%= link_to t('users.new.title'), new_user_path %></li>
  </ul>
<% end %>

<% if @users.empty? %>
  <p><%= t('.empty') %></p>
<% else %>
  <table>
    <tr>
      <th><%= t('activerecord.attributes.user.name') %></th>
      <th><%= t('activerecord.models.company') %></th>
      <th><%= t('activerecord.models.store') %></th>
      <th><%= t('created_at') %></th>
      <th class="action"><%= t('edit') %></th>
      <th class="action"><%= t('delete') %></th>
    </tr>
    <% @users.each do |user| %>
      <tr class="<%= cycle 'odd', '' %>">
        <td><%= link_to user.name, user %></td>
        <td><%= user.store.company.name if user.store %></td>
        <td><%= user.store.name if user.store %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to t('edit'), edit_user_path(user), :class => 'edit' %></td>
        <td><%= link_to t('delete'), user, :confirm => "#{t('delete')} '#{user.name}'?", :method => :delete, :class => 'delete' %></td>
      </tr>
    <% end %>
  </table>
<% end %>