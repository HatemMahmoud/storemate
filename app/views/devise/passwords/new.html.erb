<% @title = t('.title') %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'text_field' %>
  </fieldset>
  <fieldset class="actions">
    <%= f.submit t('.title') %>
  </fieldset>
<% end %>