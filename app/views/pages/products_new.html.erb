<div class="page-header">
  <%= link_to 'Store Online', page_path('store_online'), :class => 'btn success', :style => 'float: right;' %>
  <h1>Products <small>Define your products</small></h1>
</div>
<div class="row">
    <div class="span4">
      <h3>New Product</h3>
      <p>Define products to purchase and sell.</p>
    </div>
    <div class="span12">
      <a href="#" style="float: right;">
        <img class="thumbnail" src="http://placehold.it/210x150" alt="">
      </a>
      <form>
        <fieldset>
          <div class="clearfix">
            <label for="Input">Code</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="6223001360063">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Name</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="Sony Ericsson K800i">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="normalSelect">Category</label>
            <div class="input">
              <select name="normalSelect" id="normalSelect">
                <option>Select...</option>
                <option>Accessories</option>
                <option>Batteries</option>
                <option>Cables</option>
                <option selected="selected">Mobile phones</option>
                <option>Add...</option>
              </select>
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="normalSelect">Unit</label>
            <div class="input">
              <select name="normalSelect" id="normalSelect">
                <option>Select...</option>
                <option>Kilogram</option>
                <option>Packet</option>
                <option selected="selected">Piece</option>
                <option>Add...</option>
              </select>
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="fileInput">Picture</label>
            <div class="input">
              <input class="input-file" id="fileInput" name="fileInput" type="file">
            </div>
          </div>
          <div class="clearfix">
            <label id="optionsCheckboxes">Taxes</label>
            <div class="input">
              <ul class="inputs-list">
                <li>
                  <label>
                    <input type="checkbox" name="optionsCheckboxes" value="option2">
                    <span>Sales tax</span>
                  </label>
                </li>
            </div>
          </div>
          <div class="clearfix">
            <label for="Input">Unit Price</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="1325">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Units in stock</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="25">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Reorder level</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="5">
            </div>
          </div><!-- /clearfix -->
          <div class="actions">
            <%= link_to 'Next', page_path('sales_new'), :class => 'btn primary' %>
          </div>
        </fieldset>
      </form>
    </div>
  </div>