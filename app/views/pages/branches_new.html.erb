<div class="page-header">
  <h1>Branches <small>Define your branches</small></h1>
</div>
<div class="row">
    <div class="span4">
      <h3>New Branch</h3>
      <p>Branch details appear on your invoices.</p>
    </div>
    <div class="span12">
      <form>
        <fieldset>
          <div class="clearfix">
            <label for="Input">Name</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="Main Branch">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="normalSelect">Country</label>
            <div class="input">
              <select name="normalSelect" id="normalSelect">
                <option>Select...</option>
                <option>Egypt</option>
              </select>
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="normalSelect">City</label>
            <div class="input">
              <select name="normalSelect" id="normalSelect">
                <option>Select...</option>
                <option>Alexandria</option>
              </select>
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Address</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Phone</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Email</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="textarea">Policy</label>
            <div class="input">
              <textarea class="xlarge" id="textarea2" name="textarea2" rows="7">Returns are within 14 days. Thank you for shopping with us.</textarea>
            </div>
          </div>
          <div class="clearfix">
          <div class="actions">
            <%= link_to 'Next', page_path('users_new'), :class => 'btn primary' %>
          </div>
        </fieldset>
      </form>
    </div>
  </div>