<div class="page-header">
  <h1>Signup <small>Create your account</small></h1>
</div>
<div class="row">
    <div class="span4">
      <p>All fields are required. When you're done you'll get a confirmation email.</p>
    </div>
    <div class="span12">
      <form>
        <fieldset>
          <div class="clearfix">
            <label for="Input">Company Name</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="Hatem Stores">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="normalSelect">Retail Business</label>
            <div class="input">
              <select name="normalSelect" id="normalSelect">
                <option>Select...</option>
                <option>Electronics</option>
                <option>Supermarket</option>
                <option>Clothing</option>
                <option>Jewelry</option>
                <option>Pharmacy</option>
              </select>
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Email</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="text" value="info@hatemstores.com">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label for="Input">Password</label>
            <div class="input">
              <input class="" id="Input" name="Input" size="30" type="password" value="xxxxxxxx">
            </div>
          </div><!-- /clearfix -->
          <div class="clearfix">
            <label id="optionsCheckboxes">Terms</label>
            <div class="input">
              <ul class="inputs-list">
                <li>
                  <label>
                    <input type="checkbox" name="optionsCheckboxes" value="option1">
                    <span>I agree to the <a href="#">terms of service</a></span>
                  </label>
                </li>
              </ul>
            </div>
          </div>
          <div class="actions">
            <%= link_to 'Next', page_path('products_new'), :class => 'btn primary' %>
          </div>
        </fieldset>
      </form>
    </div>
  </div>