<!DOCTYPE html>
<html>
<head>
  <title><%= @title ? "#{@title} - #{t(:app_name)}" : t(:app_name) %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header"> 
    <div class="content">
      <h1><%= link_to t(:app_name), root_path %></h1>
      <ul>
        <li><%= link_to_unless_current(t(:help), page_path('help')) {|name, link| link_to name, link, :class => 'selected' } %></li>
      </ul>
    </div>
  </div>
  <div id="body" class="content">
    <div id="menu">
      <ul>
        <li><%= link_to_unless_current(t(:home), root_path) {|name, link| link_to name, link, :class => 'selected' } %></li>
        <li><%= link_to t('activerecord.models.company').pluralize, companies_path, :class => controller_name=='companies' ? 'selected' : '' %></li>
        <% if params[:company_id] %>
          <li><%= link_to t('activerecord.models.store').pluralize, company_stores_path(Company.find(params[:company_id])), :class => controller_name=='stores' ? 'selected' : '' %></li>
        <% end %>
      </ul>
    </div>
    <div id="container">
      <% if content_for? :actions %>
        <div class="actions">
          <%= yield :actions %>
        </div>
      <% end %>
      <% if @title %>
        <h1><%= @title %></h1>
      <% end %>
      <%- flash.each do |name, message| -%>
        <%= content_tag :p, message, :class => name %>
      <%- end -%>
      <%= yield %>
    </div>
  </div>
  <div id="footer">
    <p><%= link_to 'Made in ExpressionLab', 'http://www.expressionlab.com', :target => '_blank' %></p>
  </div>
</body>
</html>