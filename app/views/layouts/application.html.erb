<!DOCTYPE html>
<html>
<head>
  <title><%= "#{@title} - " if @title %>StoreMate</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header"> 
    <div class="content">
      <h1><%= link_to 'StoreMate', root_path %></h1>
      <ul>
        <% if user_signed_in? %>
          <li><%= link_to_unless_current(current_user.email, edit_user_registration_path) {|name, link| link_to name, link, :class => 'selected' } %></li>
          <li><%= link_to "Sign out", destroy_user_session_path %></li>
        <% else %>
          <li><%= link_to_unless_current('Sign in', new_user_session_path) {|name, link| link_to name, link, :class => 'selected' } %></li>
          <li><%= link_to_unless_current('Sign up', new_user_registration_path) {|name, link| link_to name, link, :class => 'selected' } %></li>
        <% end %>
        <li><%= link_to_unless_current('Help', page_path('help')) {|name, link| link_to name, link, :class => 'selected' } %></li>
      </ul>
    </div>
  </div>
  <div id="body" class="content">
    <div id="menu">
      <ul>
        <li><%= link_to_unless_current('Home', root_path) {|name, link| link_to name, link, :class => 'selected' } %></li>
      </ul>
    </div>
    <div id="container">
      <% if @title %>
        <h2><%= @title %></h2>
      <% end %>
      <%- flash.each do |name, message| -%>
        <%= content_tag :p, message, :class => name %>
      <%- end -%>
      <%= yield %>
    </div>
  </div>
  <div id="footer">
    <p><%= link_to 'Made in ExpressionLab', 'http://www.expressionlab.com', :target => '_blank' %></p>
  </div>
</body>
</html>